<!--pages/comdity_detail/comdity_detail.wxml-->
<!--轮播  -->
<view class='head'>
     <swiper indicator-dots="true" autoplay="true" interval="3000" indicator-color='white' indicator-active-color='#FF7F01' duration="1000" class="swiper-item" circular="true">
          <block wx:for="{{banner}}" wx:for-index="index">
              <swiper-item>
                <image src="{{item.imgUrl}}" class="slide-image" style='width:100%;height:100%' mode="aspectFill" />
              </swiper-item>
          </block>
     </swiper>
</view>

<!-- 黄色部分 -->
<view class='yellow_div'>
  <view class='div_top flex'>
      <view class='top_right'>
          <view class='money'>￥9.99<text style='color:#333333;font-size:30rpx;text-decoration:line-through'>￥60.00</text></view>
          <view class='fs'>已拼20份</view>
      </view>
      <view class='top_right'>
          <view class='end'>距离拼团结束</view>
          <view class='fs flex'>
              <image src='../../img/nz.png' style='width:40rpx;margin-top:-10rpx;margin-left:30rpx' mode='widthFix'/>
              <view class='time'>00天05:00:00</view>
          </view>
      </view>
  </view>
  <view class='yellow_div_white flex'>
    <view class='left'>
      <view class='name'>澳大利亚进口荠橙 奥橙12个装</view>
      <view class='text'>新鲜保障 配送迅捷</view>
      <view class='xx flex'>
          <image src='../../img/ty-3-1 (1).png' style='width:35rpx;margin-top:10rpx;' mode='widthFix'/>
          <view class='wz'>团员自提</view>
          <image src='../../img/ty-3-1 (1).png' style='width:35rpx;margin-top:10rpx;margin-left:30rpx;' mode='widthFix'/>
          <view class='wz'>结团后次日达</view>
      </view>
    </view>
    <view class='right'>
        <button open-type='share' plain='true' style='margin-top:50rpx;border:none'>
            <image src='../../img/fx-(1).png'  style='width:60rpx;' mode='widthFix'/>
            <view class='yq'>邀好友加入</view>
        </button>
    </view>
  </view>
</view>
<view class='gg flex'>
    <view class='gg_name'>规格</view>
    <view class='gg_detail'>澳大利亚进口荠橙12*500g</view>
    <image src='../../img/dbx-1-kb.png' style='width:20rpx;margin-left:10rpx;margin-top:20rpx;' mode='widthFix'/>
</view>
<view class='gg flex'>
    <view class='gg_name'>已选</view>
    <view class='gg_detail'>选择分类 数量</view>
    <image src='../../img/dbx-1-kb.png' style='width:20rpx;margin-left:10rpx;margin-top:20rpx;' mode='widthFix'/>
</view>
<view style='margin-top:20rpx;background-color:#EFEFF4;width:100%;height:20rpx;'></view>

